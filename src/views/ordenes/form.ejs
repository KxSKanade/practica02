<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Vincula Tailwind CSS desde el CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <link rel="stylesheet" href="/styles.css">  <!-- Si tienes estilos personalizados -->
</head>
<body class="bg-gray-100">

    <div class="container mx-auto mt-10 p-5 bg-white rounded-lg shadow-lg">
        <h1 class="text-3xl font-semibold text-center text-blue-600 mb-6">Crear Nueva Orden</h1>
        <form action="/api/ordenes" method="POST" enctype="multipart/form-data">
            <!-- Select Cliente -->
            <div class="mb-4">
                <label for="id_cliente" class="block text-gray-700 font-medium">Seleccionar Cliente:</label>
                <select name="id_cliente" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
                    <option value="">Selecciona un cliente</option>
                    <% clientes.forEach(cliente => { %>
                        <option value="<%= cliente.id %>"><%= cliente.nombre %> (ID: <%= cliente.id %>)</option>
                    <% }) %>
                </select>
            </div>

            <!-- Producto -->
            <div class="mb-4">
                <label for="producto" class="block text-gray-700 font-medium">Producto:</label>
                <input type="text" name="producto" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
            </div>

            <!-- Cantidad -->
            <div class="mb-4">
                <label for="cantidad" class="block text-gray-700 font-medium">Cantidad:</label>
                <input type="number" name="cantidad" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
            </div>

            <!-- Total -->
            <div class="mb-6">
                <label for="total" class="block text-gray-700 font-medium">Total:</label>
                <input type="number" step="0.01" name="total" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
            </div>

            <div class="form-group">
                <label for="imagen">Imagen:</label>
                <input type="file" name="imagen" accept="image/png, image/jpeg" />
            </div>

            <!-- Botón para crear la orden -->
            <button type="submit" class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                Crear Orden
            </button>
        </form>

        <!-- Botón para volver -->
        <div class="mt-4 text-center">
            <a href="/api/ordenes" class="text-blue-600 hover:text-blue-800 text-lg">Volver a la Lista de Órdenes</a>
        </div>
    </div>

</body>
</html>
