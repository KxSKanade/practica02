<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="container mx-auto p-4">
        <h1 class="text-center text-3xl font-bold mb-4">Lista de Órdenes</h1>
        
        <!-- Tabla de Órdenes -->
<!-- src/views/ordenes/index.ejs -->
<table class="min-w-full table-auto bg-white shadow-md rounded-lg">
  <thead>
      <tr class="bg-blue-500 text-white">
          <th class="px-4 py-2">Cliente</th>
          <th class="px-4 py-2">Producto</th>
          <th class="px-4 py-2">Cantidad</th>
          <th class="px-4 py-2">Total</th>
          <th class="px-4 py-2">Imagen</th>
          <th class="px-4 py-2">Acciones</th>
      </tr>
  </thead>
  <tbody>
      <% ordenes.forEach(orden => { %>
          <tr class="border-b">
              <td class="px-4 py-2"><%= orden.cliente %></td>
              <td class="px-4 py-2"><%= orden.producto %></td>
              <td class="px-4 py-2"><%= orden.cantidad %></td>
              <td class="px-4 py-2">$<%= orden.total %></td>
              <td class="px-4 py-2">
                <!-- Mostrar la imagen solo si existe -->
                <% if (orden.imagen) { %>
                  <img src="<%= orden.imagen %>" alt="Imagen de producto" class="w-16 h-16 object-cover rounded">
                <% } else { %>
                  <p>No hay imagen</p>
                <% } %>
              </td>            
              <td class="px-4 py-2">
                  <!-- Botón para editar -->
                  <a href="/api/ordenes/edit/<%= orden.id %>" class="bg-yellow-400 text-white px-3 py-1 rounded-lg">Editar</a>
                  
                  <!-- Botón para eliminar -->
                  <form action="/api/ordenes/delete/<%= orden.id %>" method="POST" class="inline-block">
                      <button type="submit" class="bg-red-500 text-white px-3 py-1 rounded-lg">Eliminar</button>
                  </form>
              </td>
          </tr>
      <% }) %>
  </tbody>
</table>

        <div class="text-center mt-4">
            <a href="/" class="bg-gray-500 text-white px-6 py-2 rounded-lg">Volver a la Página Principal</a>
        </div>

        <div class="text-center mt-4">
            <a href="/api/ordenes/new" class="bg-blue-500 text-white px-6 py-2 rounded-lg">Crear Nueva Orden</a>
        </div>
    </div>
</body>
</html>
