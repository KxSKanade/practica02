<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="container mx-auto p-4">
        <h1 class="text-center text-3xl font-bold mb-4">Lista de Clientes</h1>
        
        <!-- Tabla de Clientes -->
        <table class="min-w-full table-auto bg-white shadow-md rounded-lg">
            <thead>
                <tr class="bg-blue-500 text-white">
                    <th class="px-4 py-2">Nombre</th>
                    <th class="px-4 py-2">Correo</th>
                    <th class="px-4 py-2">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% clientes.forEach(cliente => { %>
                    <tr class="border-b">
                        <td class="px-4 py-2"><%= cliente.nombre %></td>
                        <td class="px-4 py-2"><%= cliente.correo %></td>
                        <td class="px-4 py-2">
                            <!-- Botón para editar -->
                            <a href="/api/clientes/edit/<%= cliente.id %>" class="bg-yellow-400 text-white px-3 py-1 rounded-lg">Editar</a>
                            
                            <!-- Botón para eliminar -->
                            <form action="/api/clientes/delete/<%= cliente.id %>" method="POST" class="inline-block">
                                <button type="submit" class="bg-red-500 text-white px-3 py-1 rounded-lg">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <div class="text-center mt-4">
            <a href="/" class="bg-gray-500 text-white px-6 py-2 rounded-lg">Volver a la Página Principal</a>
        </div>

        <div class="text-center mt-4">
            <a href="/api/clientes/new" class="bg-blue-500 text-white px-6 py-2 rounded-lg">Crear Nuevo Cliente</a>
        </div>
    </div>
</body>
</html>
